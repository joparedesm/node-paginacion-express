<%- include('../partials/header') %>

<div class="container bg-dark">
  <div class="d-flex justify-content-center row p-4 bg-dark">
    <div class="col-md-6 offset md-3">
      <div class="card">
        <div class="card-body">
          <h1>Agregar Producto</h1>
          <form method="post" action="/add">
            <div class="form-group">
              <label for="name">Nombre:</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="product_name"
                placeholder="Ej:Zelda Tears of the Kingdom"
              />
            </div>
            <div class="form-group">
              <label for="price">Precio:</label>
              <input
                type="text"
                class="form-control"
                id="price"
                name="product_price"
                placeholder="Ej:100000"
              />
            </div>
            <div class="form-group">
              <label for="category">Categoría:</label>
              <input
                type="text"
                class="form-control"
                id="category"
                name="product_category"
                placeholder="Ej:Mundo Abierto"
              />
            </div>
            <div class="form-group">
              <label for="description">Descripcion:</label>
              <textarea
                class="form-control"
                id="description"
                name="product_description"
                rows="4"
                placeholder="La ultima entrega de la saga de Zelda y continuación de Zelda BotW."
              ></textarea>
            </div>
            <div class="form-group">
              <label for="image">Imagen (URL):</label>
              <input
                type="url"
                class="form-control"
                id="image"
                name="product_image"
                placeholder="Ej: https://i.imgur.com/EjUs4q0.jpeg"
              />
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
